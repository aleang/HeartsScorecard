<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="App_Theme">
    <item name="android:editTextStyle">@style/NameStyle</item>
  </style>
  <style name="RowStyle">
    <item name="android:weightSum">5</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">horizontal</item>
  </style>
  <style name="NameStyle" parent="@android:style/Widget.AutoCompleteTextView">
    <item name="android:textColor">@color/white</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">10dp</item>
    <item name="android:completionThreshold">1</item>"
    <item name="android:singleLine">true</item>"
    <item name="android:layout_margin">2dp</item>
  </style>
  <style name="ScoreStyle" parent="@style/NameStyle">
    <item name="android:background">@color/babyblue</item>
    <item name="android:gravity">center</item>
    <item name="android:inputType">number</item>
    <item name="android:textSize">25dip</item>
    <item name="android:maxLength">2</item>
  </style>
  <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">8dp</item>
    <item name="android:progress">0</item>
    <item name="android:layout_marginBottom">1dp</item>
  </style>
  <style name="FinalScoreStyle" parent="@style/NameStyle">
    <item name="android:background">@color/black</item>
    <item name="android:textColor">@color/babyblue</item>
    <item name="android:gravity">center</item>
    <item name="android:text">0</item>
    <item name="android:textSize">25dip</item>
  </style>
  <integer name="rowCount">8</integer>
  <color name="babyblue">#defaff</color>
  <color name="skyblue">#87cefa</color>
  <color name="white">#FFFFFF</color>
  <color name="yellow">#FFFF00</color>
  <color name="pink">#ffc0cb</color>
  <color name="red">#ac2925</color>
  <color name="silver">#C0C0C0</color>
  <color name="lightgray">#efefef</color>
  <color name="gray">#808080</color>
  <color name="olive">#808000</color>
  <color name="orange">#d58512</color>
  <color name="purple">#663399</color>
  <color name="maroon">#800000</color>
  <color name="aqua">#00FFFF</color>
  <color name="lime">#00FF00</color>
  <color name="teal">#008080</color>
  <color name="green">#398439</color>
  <color name="blue">#357ebd</color>
  <color name="navy">#000080</color>
  <color name="black">#000000</color>
</resources>
