<?xml version="1.0" encoding="UTF-8"?>
<resources>
  <style name="App_Theme">
    <item name="android:editTextStyle">@style/NameStyle</item>
  </style>

  <!--Generic Row styles-->
  <style name="RowStyle">
    <item name="android:weightSum">6</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="HeaderRowStyle" parent="@style/RowStyle">
    <item name="android:weightSum">5</item>
  </style>

  <style name="RowStyleForFinalScore" parent="@style/RowStyle">
    <item name="android:minHeight">60dp</item>
    <item name="android:weightSum">5</item>
  </style>

  <!--Header section styles-->
  <style name="AppTextLabel">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">15dip</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">5dp</item>
  </style>
  <style name="NameStyle" parent="@android:style/Widget.AutoCompleteTextView">
    <item name="android:textColor">@color/white</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">10dp</item>
    <item name="android:completionThreshold">1</item>
    <item name="android:singleLine">true</item>
    <item name="android:layout_margin">2dp</item>
    <item name="android:dropDownWidth">match_parent</item>
    <item name="android:dropDownAnchor">@id/nameRow</item>
  </style>


  <!--Scoring (Progress bar and Number) section-->
  <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">8dp</item>
    <item name="android:max">101</item>
    <item name="android:progress">1</item>
    <item name="android:layout_marginBottom">1dp</item>
  </style>
  <style name="FinalScoreStyle" parent="@style/NameStyle">
    <item name="android:background">@color/white</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:gravity">center</item>
    <item name="android:text">0</item>
    <item name="android:textSize">25dip</item>
  </style>


  <!--Cell styles for individual scores and 'ShareCard' arrows-->
  <style name="CellStyle">
    <item name="android:layout_weight">1</item>
    <item name="android:layout_margin">2dp</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:background">@color/babyblue</item>
    <item name="android:gravity">center</item>
    <item name="android:singleLine">true</item>
    <item name="android:padding">10dp</item>
    <item name="android:textSize">25dip</item>
  </style>
  <style name="ScoreStyle" parent="@style/CellStyle">
    <item name="android:inputType">number</item>
    <item name="android:maxLength">2</item>
  </style>
  <style name="ShareCardStyle" parent="@style/CellStyle">
    <item name="android:background">@color/lightgray</item>
  </style>



  <integer name="rowCount">16</integer>

  <string-array name="playerCount3">
    <item>←</item>
    <item>→</item>
  </string-array>
  <string-array name="playerCount4">
    <item>←</item>
    <item>→</item>
    <item>↑</item>
  </string-array>
  <string-array name="playerCount5">
    <item>←</item>
    <item>→</item>
    <item>↖</item>
    <item>↗</item>
  </string-array>
  

  <color name="babyblue">#defaff</color>
  <color name="skyblue">#87cefa</color>
  <color name="white">#FFFFFF</color>
  <color name="yellow">#FFFF00</color>
  <color name="pink">#ffc0cb</color>
  <color name="red">#ac2925</color>
  <color name="silver">#C0C0C0</color>
  <color name="lightgray">#efefef</color>
  <color name="gray">#808080</color>
  <color name="olive">#808000</color>
  <color name="orange">#d58512</color>
  <color name="purple">#663399</color>
  <color name="maroon">#800000</color>
  <color name="aqua">#00FFFF</color>
  <color name="lime">#00FF00</color>
  <color name="teal">#008080</color>
  <color name="green">#398439</color>
  <color name="blue">#357ebd</color>
  <color name="navy">#000080</color>
  <color name="black">#000000</color>
</resources>
